<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>kz.enu.epam.azimkhan.tour.filter.EncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>kz.enu.epam.azimkhan.tour.filter.CommandAccessFilter</filter-class>
    </filter>

    <filter>
        <filter-name>JspProtectionFilter</filter-name>
        <filter-class>kz.enu.epam.azimkhan.tour.filter.JspProtectionFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <servlet-name>front_controller</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>JspProtectionFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>kz.enu.epam.azimkhan.tour.listener.ApplicationListener</listener-class>
    </listener>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>front_controller</servlet-name>
        <servlet-class>kz.enu.epam.azimkhan.tour.servlet.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>front_controller</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>

    <!--
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    -->

    <jsp-config>
        <taglib>
            <taglib-uri>http://azimkhan.net/taglib</taglib-uri>
            <taglib-location>/WEB-INF/tld/my.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>
