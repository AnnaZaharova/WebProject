<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <listener>
        <listener-class>kz.enu.epam.azimkhan.auth.listener.ApplicationListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>kz.enu.epam.azimkhan.auth.servlet.LoginServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>kz.enu.epam.azimkhan.auth.servlet.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>locale</servlet-name>
        <servlet-class>kz.enu.epam.azimkhan.auth.servlet.LocaleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>en</param-value>
    </context-param>
    
    <servlet-mapping>
        <servlet-name>locale</servlet-name>
        <url-pattern>/lang</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>http://azimkhan.net/taglib</taglib-uri>
            <taglib-location>/WEB-INF/tld/my.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>
